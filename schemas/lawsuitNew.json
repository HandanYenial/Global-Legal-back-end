{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/example.json",
    "type": "object",
    "default": {},
    "title": "Root Schema",
    "required": [
        "title",
        "description",
        "comment",
        "location",
        "category_handle"  
    ],
    "properties": {
        "title": {
            "type": "string",
            "default": "",
            "title": "The title Schema",
            "examples": [
                "Lawsuit"
            ]
        },
        "description": {
            "type": "string",
            "default": "",
            "title": "The description Schema",
            "examples": [
                "Lawsuit description"
            ]
        },
        "comment": {
            "type": "string",
            "default": "",
            "title": "The comment Schema",
            "examples": [
                "open"
            ]
        },
        "location": {
            "type": "string",
            "default": "",
            "title": "The location Schema",
            "examples": [
                "location"
            ]
        },
        "category_handle": {
            "type": "string",
            "default": "c1",
            "title": "The category_handle Schema",
            "examples": [
                "any category"
            ]
        },
        "created_at": {
            "type": "string",
            "default": "",
            "title": "The created_at Schema",
            "examples": [
                "2020-05-20T12:00:00.000Z"
            ]
        },
        "updated_at": {
            "type": "string",
            "default": "",
            "title": "The updated_at Schema",
            "examples": [
                "2020-05-20T12:00:00.000Z"
            ]
        }
    },
    "examples": [{
        "title": "Lawsuit",
        "description": "Lawsuit description",
        "comment": "open",
        "location": "location",
        "category_handle": "criminal",
        "created_at": "2020-05-20T12:00:00.000Z",
        "updated_at": "2020-05-20T12:00:00.000Z"
    }]
}